{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Handson: 環境セットアップ (Setup)",
            "type": "process",
            "command": "python3",
            "windows": {
                "command": "python.exe",
                "args": [
                    "${workspaceFolder}/cli/setup.py"
                ]
            },
            "args": [
                "${workspaceFolder}/cli/setup.py"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": true,
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "Handson: サンプルファイルを実行 (run sample file)",
            "type": "process",
            "command": "./venv/bin/python",
            "windows": {
                "command": "./venv/Scripts/python.exe"
            },
            "args": [
                "${input:pickSampleFile}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": true,
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "pickSampleFile",
            "description": "実行するサンプルを選択",
            "options": [
                "./samples/01_basic.py",
                "./samples/02_prompt_template.py",
                "./samples/03_conversation.py",
                "./samples/04_rag_basic.py",
                "./samples/05_rag_bot.py"
            ]
        }
    ]
}